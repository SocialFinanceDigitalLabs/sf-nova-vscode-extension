{
  "name": "sf-stlite",
  "displayName": "sf-stlite",
  "publisher": "SocialFinance",
  "description": "",
  "license": "SEE LICENSE IN LICENSE",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/whitphx/stlite.git",
    "directory": "packages/vscode-stlite"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Streamlit", "stlite"
  ],
  "icon": "images/icon.png",
  "sponsor": {
    "url": "https://github.com/sponsors/whitphx"
  },
  "activationEvents": [
    "onView:stliteContainer"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "patchPreviewContainer",
        "contents": "Run a preview of your stlite app. \n[Launch stlite preview](command:stlite.start)\n You should: \n-Have a python file opened and focused in the editor\n-Only run one app at a time\n-If you want to run a different app you should close the opened preview panel first"
      },
      {
        "view": "patchPreviewExplorer",
        "contents": "Run a preview of your stlite app. \n[Launch stlite preview](command:stlite.start)\n You should: \n-Have a python file opened and focused in the editor\n-Only run one app at a time\n-If you want to run a different app you should close the opened preview panel first"
      }
    ],
    "views": {
      "stliteContainer": [
        {
          "id": "patchPreviewContainer",
          "name": "Patch",
          "command": "stlite.start",
          "icon": "images/icon.png"
        }
      ],
      "explorer": [
        {
          "id": "patchPreviewExplorer",
          "name": "Patch",
          "command": "stlite.start",
          "icon": "images/icon.png"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stliteContainer",
          "title": "Patch",
          "icon": "images/icon.png",
          "command": "stlite.start",
          "when": "view == patchPreview"
        }
      ]
    },
    "commands": [
      {
        "command": "stlite.start",
        "title": "launch stlite preview"
      }
    ],
    "configuration": {
      "title": "stlite (Streamlit)"
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "yarn run compile-web",
    "vscode:prepublish": "yarn run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "fix:eslint": "eslint --fix src --ext ts",
    "fix:prettier": "prettier --write .",
    "check:eslint": "eslint src --ext ts",
    "check:prettier": "prettier --check .",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/vscode": "^1.76.0",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-web": "^0.0.35",
    "@vscode/vsce": "^2.18.0",
    "assert": "^2.0.0",
    "eslint": "^8.33.0",
    "minimatch": "^7.4.3",
    "mocha": "^10.2.0",
    "process": "^0.11.10",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "path": "^0.12.7"
  }
}
